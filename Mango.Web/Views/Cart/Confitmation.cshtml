        text-align: center;
        width: 400px;
    }

    h1 {
        color: #4CAF50;
    }



    .order-number {
        font-size: 22px;
        font-weight: bold;
        margin-top: 10px;
        color: #2196F3;
    }

    .btn-home {
        margin-top: 20px;
        padding: 10px 20px;
        background-color: #4CAF50;
